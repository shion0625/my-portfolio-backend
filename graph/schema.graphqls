# type： モデル情報を記述
# Query： データフェッチのエンドポイントを定義
# input： Mutationのオブジェクトの定義
# Mutation： データを修正するエンドポイントを定義

type User {
  id: ID!
  is_admin: Boolean!
  name: String!
  password: String!
  email: String!
  is_able: Boolean!
}

type Work {
  id: ID!
  title: String!
  summary: String
  image_url: String
  duration: String
  number_of_people: Int
  language: String
  role: String
  url: String!
  brief_story: String
  }

###  Query(read系)
type Query {
  users: [User!]!
  works: [Work!]!
}

### Mutation(更新系)の定義
type Mutation {
  createUser(input: NewUser!): User!
  createWork(input: NewWork!): Work!
}

###インプット用のスキーマ定義
input NewUser {
  is_admin: Boolean!
  name: String!
  password: String!
  email: String!
  is_able: Boolean!
}

input NewWork {
  title: String!
  summary: String
  image_url: String
  duration: String
  number_of_people: Int
  language: String
  role: String
  url: String!
  brief_story: String
}
